<% content_for :title do %>
Login
<% end %>

<div class="container w-full max-w-xs mx-auto mt-8 px-4 font-sans">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'bg-gray-500 shadow-md rounded-lg px-8 pt-6 pb-8 mb-4'}) do |login_user| %>
  <%= render "devise/shared/error_messages", resource: resource %>

      <h3 class="title text-xl mb-8 mx-auto text-center font-bold text-white">Login</h3>
      <div class="mb-4">
      <div class="mt-3">
                                      <%= login_user.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: 'your email address' %>
                                       </div>    
                                       <div class="mt-3">                <%= login_user.password_field :password, autocomplete: "new-password", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: 'your password' %>
</div>
        <div class="flex items-center justify-between mt-5 text-white">
                                        <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= login_user.check_box :remember_me %>
      <%= login_user.label :remember_me %>
    </div>

  <% end %>
                                  <div>
                                  <%= link_to "forgot password", user_password_path, method: :post, class: 'font-bold text-sm text-orange-500 hover:text-orange-800' %>
                                </div>

        </div>

        <div class="flex items-center justify-between mt-5">
                                    <%= login_user.submit "Login", class: 'shadow bg-purple-500 hover:bg-purple-600 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded mt-4' %>

                                          <%= link_to "You are new? register", new_user_registration_path, class: 'inline-block -mb-4 ml-2 align-baseline font-bold text-sm text-white focus:shadow-outline focus:outline-none' %>
        </div>
      </div>
    <% end %>
  </div>