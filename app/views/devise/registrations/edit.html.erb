<!-- header -->
<%= render 'layouts/partial/header' %>
<!-- /header -->

<% if flash[:notice] %>
<p class="text-center text-white bg-green-400 font-bold text-lg p-3"></p>
<% end %>

<div class="w-2/3 bg-white rounded p-8 m-4 mx-auto">
    <div class="text-center">
        <i class="fas fa-pencil-alt text-yellow-800 text-4xl"></i>
        </div>
        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6 border-b-300 border-yellow-600 pb-3 mt-3">プロフィール編集</h1>
        <div class="flex justify-center">
        <div class="update-profile w-1/2 p-3">
        <h2 class="pb-5 text-center text-xl">アカウント情報変更</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
            <div class="flex flex-col mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border py-2 px-3' %>
            </div>
            <div class="flex flex-col mb-4">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'border py-2 px-3' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
            </div>
            <div class="flex flex-col mb-4">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'border py-2 px-3' %>
            </div>
            <div class="flex flex-col mb-4">
            <%= f.submit '更新', class: 'w-full block bg-gray-500 hover:bg-gray-700 text-white uppercase text-lg mx-auto p-3 rounded text-center mt-5' %>
            </div>
            <% end %>
        </div>
        <div class="reset-time w-1/2 p-3">
        <h2 class="pb-5 text-center text-xl">記録時間リセット</h2>
        <%= link_to "リセット", user_path(current_user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'w-full block bg-gray-500 hover:bg-gray-700 text-white uppercase text-lg mx-auto p-3 rounded text-center' %>
        <span class="block mt-3">
        (リセットした後取り消すことは出来ません)
        </span>
        </div>
        </div>
<%= link_to "戻る", user_path(current_user), class: 'p-3 rounded text-center mx-auto w-1/3 block mt-3 bg-blue-500 text-white hover:bg-blue-700' %>
