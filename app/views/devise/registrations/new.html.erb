<% content_for :title do %>
Register
<% end %>

<div class="container w-full max-w-xs mx-auto mt-8 px-4 font-sans">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'bg-gray-500 shadow-md rounded-lg px-8 pt-6 pb-8 mb-4'} ) do |new_user| %>
  <%= render "devise/shared/error_messages", resource: resource %>
      <h3 class="title text-xl mb-8 mx-auto text-center font-bold text-white">Register</h3>
      <div class="mb-4">
      <div class="mt-3">
                                      <%= new_user.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: 'your email address' %>
                                       </div>    
                                       <div class="mt-3">                <%= new_user.password_field :password, autocomplete: "new-password", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: 'your password' %>
</div>
<div class="mt-3">
 <%= new_user.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: 'password confirmation' %>
</div>
        <div class="flex items-center justify-between mt-5">
                                    <%= new_user.submit "Register", class: 'shadow bg-purple-500 hover:bg-purple-600 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded mt-4' %>

                                          <%= link_to "You have already account? Login", new_user_session_path, class: 'inline-block -mb-4 ml-2 align-baseline font-bold text-sm text-white focus:shadow-outline focus:outline-none' %>

        </div>
      </div>
    <% end %>
  </div>



