<div class="flex justify-center items-center h-screen w-full">
    <div class="w-full bg-white rounded shadow-2xl p-8 m-4 mb-48">
        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">記録</h1>
        <%= form_with model: @user.movies.build, url: user_movies_path(@user), class: 'text-black', local: true do |new_movie| %>
        <%= render 'jas/shared/error_messages', object: new_movie.object %>
            <div class="flex flex-col mb-4">
            <%= new_movie.text_field :time, class: 'border py-2 px-3', placeholder: '時間（分）を入力してください' %>
            </div>
            <div class="flex flex-col mb-4">
            <%= new_movie.text_area :memo, class: 'border py-2 px-3', placeholder: 'メモを加えてください', style: 'height: 150px; resize: none;' %>
            </div>
            <div class="flex flex-col mb-4">
            <%= new_movie.file_field :image, class: 'border py-2 px-3' %>
            </div>
            <button class="w-full block bg-blue-400 hover:bg-teal-600 text-white uppercase text-lg mx-auto p-3 rounded" type="submit">記録する</button>
        <% end %>
    </div>
</div>